<div class="max-w-7xl mx-auto p-8">
  <!-- Turn Indicator -->
  <% if @game.status == 'active' %>
    <div class="mb-6 text-center">
      <% if @game.game_state['turn'] == 'player' %>
        <div class="inline-block px-8 py-4 bg-green-100 border-2 border-green-500 text-green-800 rounded-lg text-2xl font-bold">
          YOUR TURN
        </div>
      <% else %>
        <div class="inline-block px-8 py-4 bg-gray-100 border-2 border-gray-400 text-gray-600 rounded-lg text-2xl font-bold">
          AI THINKING...
        </div>
      <% end %>
    </div>
  <% end %>

  <!-- Header -->
  <div class="flex justify-between items-start mb-6">
    <div>
      <%= link_to "← Back to Games", root_path, class: "text-blue-600 hover:underline text-sm" %>
      <h1 class="text-2xl font-bold mt-2 text-gray-800">Chromatic - Game <%= @game.id %></h1>

      <!-- Deck state display -->
      <% if @game.status == 'active' %>
        <% deck_size = @game.game_state['deck'].length %>
        <div class="mt-2 inline-flex items-center gap-2 px-3 py-1.5 rounded-lg text-sm
          <%= if deck_size <= 10
                'bg-red-100 border-2 border-red-400 text-red-800'
              elsif deck_size <= 30
                'bg-yellow-100 border-2 border-yellow-400 text-yellow-800'
              else
                'bg-blue-100 border-2 border-blue-400 text-blue-800'
              end %>">
          <span class="font-semibold"><%= deck_size %> cards left</span>
          <% if deck_size <= 10 %>
            <span class="font-bold">⚠️ Ending soon!</span>
          <% end %>
        </div>
      <% end %>
    </div>

    <!-- Enhanced Score Display -->
    <div class="text-right">
      <div class="text-sm text-gray-600 mb-1">Round <%= @game.current_round %> of <%= @game.total_rounds %></div>
      <div class="flex gap-3">
        <div class="bg-gradient-to-br from-green-50 to-green-100 border-2 border-green-400 rounded-xl px-4 py-2 shadow-sm">
          <div class="text-xs text-green-700 font-medium">You</div>
          <div class="text-3xl font-bold text-green-800"><%= @game.player_score %></div>
        </div>
        <div class="bg-gradient-to-br from-gray-50 to-gray-100 border-2 border-gray-400 rounded-xl px-4 py-2 shadow-sm">
          <div class="text-xs text-gray-700 font-medium">AI</div>
          <div class="text-3xl font-bold text-gray-800"><%= @game.ai_score %></div>
        </div>
      </div>
    </div>
  </div>

  <!-- Core Game Rule - Simplified -->
  <% if @game.status == 'active' %>
    <div class="bg-gradient-to-r from-blue-50 to-purple-50 border-2 border-blue-400 rounded-xl p-4 mb-6 shadow-sm">
      <div class="flex items-start gap-3">
        <div class="text-3xl">🎯</div>
        <div>
          <h3 class="text-lg font-bold text-blue-900 mb-1">Core Rule</h3>
          <p class="text-blue-800 font-semibold">Card colors MUST match path colors.</p>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Issue #9: Round End Summary -->
  <% if @game.status == 'round_ending' %>
    <% summary = @game.game_state['round_summary'] %>
    <div class="bg-gradient-to-r from-blue-50 to-purple-50 rounded-lg p-8 text-center mb-8 border-2 border-blue-300">
      <h2 class="text-4xl font-bold mb-4 text-blue-900">Round <%= summary['round'] %> Complete! 🎉</h2>

      <div class="grid grid-cols-2 gap-8 max-w-3xl mx-auto mb-6">
        <div class="bg-white rounded-lg p-6 border-2 border-green-300">
          <div class="text-2xl font-bold text-green-700 mb-2">Your Score</div>
          <div class="text-5xl font-bold text-green-600 mb-2"><%= summary['player_round_score'] %></div>
          <div class="text-sm text-gray-600 mb-2">
            <%= summary['player_path_count'] %> <%= 'path'.pluralize(summary['player_path_count']) %> × <%= summary['player_multiplier'] %>x multiplier
          </div>
          <% if summary['player_multiplier'] > 1.0 %>
            <div class="text-xs text-green-700 font-bold mb-2">
              🌈 COMBO! <%= summary['player_base_score'] %> base → <%= summary['player_round_score'] %> final
            </div>
          <% end %>
          <div class="text-sm text-gray-600">this round</div>
          <div class="mt-4 text-lg">
            Total: <span class="font-bold text-green-700"><%= summary['player_total_before'] %> → <%= @game.player_score %></span>
          </div>
        </div>

        <div class="bg-white rounded-lg p-6 border-2 border-red-300">
          <div class="text-2xl font-bold text-red-700 mb-2">AI Score</div>
          <div class="text-5xl font-bold text-red-600 mb-2"><%= summary['ai_round_score'] %></div>
          <div class="text-sm text-gray-600 mb-2">
            <%= summary['ai_path_count'] %> <%= 'path'.pluralize(summary['ai_path_count']) %> × <%= summary['ai_multiplier'] %>x multiplier
          </div>
          <% if summary['ai_multiplier'] > 1.0 %>
            <div class="text-xs text-red-700 font-bold mb-2">
              🌈 COMBO! <%= summary['ai_base_score'] %> base → <%= summary['ai_round_score'] %> final
            </div>
          <% end %>
          <div class="text-sm text-gray-600">this round</div>
          <div class="mt-4 text-lg">
            Total: <span class="font-bold text-red-700"><%= summary['ai_total_before'] %> → <%= @game.ai_score %></span>
          </div>
        </div>
      </div>

      <% if summary['player_round_score'] > summary['ai_round_score'] %>
        <p class="text-2xl text-green-600 font-bold mb-4">You won this round!</p>
      <% elsif summary['ai_round_score'] > summary['player_round_score'] %>
        <p class="text-2xl text-red-600 font-bold mb-4">AI won this round!</p>
      <% else %>
        <p class="text-2xl text-gray-600 font-bold mb-4">This round was a tie!</p>
      <% end %>

      <%= button_to "Continue to Round #{@game.current_round + 1}",
                    continue_round_game_path(@game),
                    method: :post,
                    data: { turbo: false },
                    class: "mt-4 px-10 py-4 bg-blue-600 text-white text-2xl rounded-lg hover:bg-blue-700 font-bold shadow-lg" %>
    </div>
  <% end %>

  <% if @game.status == 'finished' %>
    <!-- Game Over -->
    <div class="bg-gray-100 rounded-lg p-8 text-center mb-8">
      <h2 class="text-4xl font-bold mb-4">Game Over!</h2>
      <% if @game.winner == 'player' %>
        <p class="text-2xl text-green-600">You Win!</p>
      <% elsif @game.winner == 'ai' %>
        <p class="text-2xl text-red-600">AI Wins!</p>
      <% else %>
        <p class="text-2xl text-gray-600">It's a Tie!</p>
      <% end %>
      <div class="mt-4 text-xl">
        Final Score - You: <%= @game.player_score %> | AI: <%= @game.ai_score %>
      </div>
      <%= link_to "Play Again", root_path, class: "mt-6 inline-block px-8 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700" %>
    </div>
  <% end %>

  <% if notice %>
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
      <%= notice %>
    </div>
  <% end %>

  <% if alert %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
      <%= alert %>
    </div>
  <% end %>

  <!-- Color Rules Reference - Collapsible -->
  <details class="mb-6 bg-white rounded-xl border-2 border-gray-300 shadow-sm">
    <summary class="cursor-pointer p-4 font-bold text-lg hover:bg-gray-50 rounded-xl transition-colors select-none">
      📚 Color Rules Reference (click to expand)
    </summary>
    <div class="p-4 pt-2 border-t border-gray-200">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-3">
        <div class="bg-red-50 p-3 rounded-lg border-2 border-red-300">
          <div class="font-bold text-red-700 mb-1 text-lg">🔴 Red</div>
          <div class="text-sm text-gray-800 font-semibold">Jump by 2+</div>
          <div class="text-xs text-gray-600 mt-1">Example: 2→5→9→15</div>
          <div class="text-xs text-gray-500 mt-1">Max: 10 cards</div>
        </div>
        <div class="bg-blue-50 p-3 rounded-lg border-2 border-blue-300">
          <div class="font-bold text-blue-700 mb-1 text-lg">🔵 Blue</div>
          <div class="text-sm text-gray-800 font-semibold">Matching pairs</div>
          <div class="text-xs text-gray-600 mt-1">Example: 5,5→12,12→7,7</div>
          <div class="text-xs text-gray-500 mt-1">Need duplicates!</div>
        </div>
        <div class="bg-green-50 p-3 rounded-lg border-2 border-green-300">
          <div class="font-bold text-green-700 mb-1 text-lg">🟢 Green</div>
          <div class="text-sm text-gray-800 font-semibold">Consecutive (max 5)</div>
          <div class="text-xs text-gray-600 mt-1">Example: 8→9→10→11→12</div>
          <div class="text-xs text-gray-500 mt-1">Capped at 5!</div>
        </div>
        <div class="bg-yellow-50 p-3 rounded-lg border-2 border-yellow-300">
          <div class="font-bold text-yellow-700 mb-1 text-lg">🟡 Yellow</div>
          <div class="text-sm text-gray-800 font-semibold">Same # (max 4)</div>
          <div class="text-xs text-gray-600 mt-1">Example: 7→7→7→7</div>
          <div class="text-xs text-gray-500 mt-1">Multiples only!</div>
        </div>
        <div class="bg-purple-50 p-3 rounded-lg border-2 border-purple-300">
          <div class="font-bold text-purple-700 mb-1 text-lg">🟣 Purple</div>
          <div class="text-sm text-gray-800 font-semibold">Any descending</div>
          <div class="text-xs text-gray-600 mt-1">Example: 20→17→10→3</div>
          <div class="text-xs text-gray-500 mt-1">Easier now!</div>
        </div>
      </div>

      <!-- Combo Multiplier System -->
      <div class="mt-4 bg-gradient-to-r from-yellow-50 to-orange-50 border-2 border-yellow-400 rounded-lg p-4">
        <div class="flex items-start gap-3">
          <div class="text-2xl">🌈</div>
          <div>
            <div class="font-bold text-yellow-900 mb-1">COMBO SYSTEM: Multiple Paths = Multiplier Bonus!</div>
            <div class="flex gap-4 text-xs text-gray-800">
              <span>1 path = <strong>1.0x</strong></span>
              <span>2 paths = <strong class="text-blue-700">1.2x</strong></span>
              <span>3 paths = <strong class="text-green-700">1.5x</strong></span>
              <span>4 paths = <strong class="text-purple-700">1.8x</strong></span>
              <span class="text-orange-700 font-bold">5 paths = <strong>2.0x RAINBOW!</strong></span>
            </div>
            <div class="text-xs text-gray-600 mt-1">Strategy: Build multiple paths for huge bonuses!</div>
          </div>
        </div>
      </div>
    </div>
  </details>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <!-- Player Side -->
    <div>
      <h2 class="text-2xl font-bold mb-4">Your Paths</h2>
      <div class="space-y-3">
        <% if @game.player_paths.any? %>
          <% @game.player_paths.each do |path| %>
            <%= render partial: 'color_path', locals: { path: path } %>
          <% end %>
        <% else %>
          <div class="text-gray-500 text-center py-8 border-2 border-dashed rounded-lg">
            No paths yet. Start a path for 2 cards!
          </div>
        <% end %>
      </div>
    </div>

    <!-- AI Side -->
    <div>
      <h2 class="text-2xl font-bold mb-4">AI Paths</h2>
      <div class="space-y-3">
        <% if @game.ai_paths.any? %>
          <% @game.ai_paths.each do |path| %>
            <%= render partial: 'color_path', locals: { path: path } %>
          <% end %>
        <% else %>
          <div class="text-gray-500 text-center py-8 border-2 border-dashed rounded-lg">
            AI hasn't played yet
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Your Hand -->
  <% if @game.status == 'active' %>
    <div class="mt-8 bg-gradient-to-b from-gray-50 to-white border-2 border-gray-300 rounded-xl p-6 shadow-lg">
      <h2 class="text-2xl font-bold text-gray-800 mb-4">🃏 Your Hand (<%= @game.player_hand.length %> cards)</h2>

      <div class="flex flex-wrap gap-4 mb-4">
        <% @game.player_hand.each_with_index do |card, index| %>
          <%= render partial: 'card', locals: { card: card, index: index, game: @game } %>
        <% end %>
      </div>

      <!-- End Turn Section - With Clear Status -->
      <div class="mt-6 space-y-3">
        <% hand_size = @game.player_hand.length %>
        <% has_cards = hand_size > 0 %>

        <% if has_cards %>
          <!-- Warning: Still have cards -->
          <div class="bg-amber-50 border-2 border-amber-400 rounded-xl p-4 text-center">
            <div class="flex items-center justify-center gap-3 mb-2">
              <span class="text-3xl">⚠️</span>
              <div class="text-lg font-bold text-amber-900">You still have <%= hand_size %> <%= 'card'.pluralize(hand_size) %> in hand!</div>
            </div>
            <div class="text-sm text-amber-800 mb-3">
              <strong>Before ending your turn:</strong> Play cards to your paths or discard unwanted cards
            </div>
            <div class="flex gap-4 justify-center items-center text-xs text-amber-700">
              <div class="flex items-center gap-1">
                <span>✓</span>
                <span>Click cards to play them</span>
              </div>
              <div class="flex items-center gap-1">
                <span>✓</span>
                <span>Click "Discard" to remove cards</span>
              </div>
            </div>
          </div>

          <!-- Disabled End Turn Button with Explanation -->
          <div class="relative flex justify-center">
            <button
              disabled
              class="px-12 py-4 bg-gray-300 text-gray-500 rounded-xl font-bold text-2xl shadow-lg cursor-not-allowed opacity-60"
              title="You must play or discard all cards before ending your turn">
              End Turn → (Disabled)
            </button>
          </div>
        <% else %>
          <!-- Ready to End Turn -->
          <div class="bg-green-50 border-2 border-green-400 rounded-xl p-3 text-center">
            <div class="flex items-center justify-center gap-2 text-green-800">
              <span class="text-2xl">✓</span>
              <span class="font-bold">Hand is empty - Ready to end turn!</span>
            </div>
          </div>

          <%= button_to "End Turn →",
                        end_turn_game_path(@game),
                        method: :post,
                        data: { turbo: false, confirm: "End your turn? The AI will play next." },
                        class: "w-full px-12 py-4 bg-green-600 text-white rounded-xl hover:bg-green-700 font-bold transition-all text-2xl shadow-xl hover:shadow-2xl hover:scale-105 active:scale-95" %>
        <% end %>
      </div>

      <!-- Exponential scoring explainer -->
      <div class="mt-6 bg-gradient-to-r from-purple-50 to-pink-50 border-2 border-purple-300 rounded-lg p-4">
        <div class="flex items-start gap-3">
          <div class="text-2xl">📈</div>
          <div class="text-sm text-gray-800">
            <div class="font-bold text-purple-900 mb-1">Scoring is exponential: (cards)²</div>
            <div class="flex gap-4 text-xs">
              <span>1 card = <strong>1 pt</strong></span>
              <span>2 cards = <strong>4 pts</strong></span>
              <span>3 cards = <strong>9 pts</strong></span>
              <span>4 cards = <strong>16 pts</strong></span>
              <span>5 cards = <strong>25 pts</strong></span>
              <span class="text-purple-700 font-bold">→ Build longer paths!</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
